generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  NORMAL
  ADMIN
}

model User {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  email       String
  googleId    String?
  avatar      String?
  role        UserRole   @default(NORMAL)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}
